- title = current_page.data.title || "Annideas?"
title = title
meta name="title" content=title
meta property="og:title" content=title
meta name="twitter:title" content=title

- url = info[:current_url].present? || "http://blog.annideas.com#{current_page.url}"
meta name="url" content=url
meta property="og:url" content=url

- description = info[:current_desc].present? ? info[:current_desc] : (current_page.data.desc || "我是陳祐禎 YU CHEN CHEN (Annie)，這個 Blog 記錄著我從教育工作者轉職成 Rails 工程師的心路歷程，歡迎前輩們多多指教，謝謝 :)")
meta name="description" content=description
meta property="og:description" content=description
meta itemprop="description" content=description
meta name="twitter:description" content=description

/ - author = "陳祐禎 YU CHEN CHEN (Annie)"
/ meta name="author" content=author
/ meta property="og:author" content=author

- if info[:type] == 'article'
  meta property="article:published_time" content=current_page.data.date
  meta property="article:author" content="https://www.facebook.com/OtiAnn"

meta name="type" content="#{info[:type] ? info[:type] : 'website'}"
meta property="og:type" content="#{info[:type] ? info[:type] : 'website'}"
meta property="fb:app_id" content="838413066169349"
meta property="og:locale" content="zh_TW"
meta itemprop="name" content="Annideas?"
meta property="og:site_name" content="Annideas?"
meta property="og:image" content="http://blog.annideas.com/images/annie_pic.jpg"

meta name="twitter:site" content="@_OtiAnn"
meta name="twitter:card" content="summary_large_image"
meta name="twitter:image" content="http://blog.annideas.com/images/annie_pic.jpg"
meta name="twitter:creator" content="@_OtiAnn"

- if info[:tags].present?
  - info[:tags].each do |tag|
    meta property="article:tag" content=tag
